    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'cris-cli'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=cris-cli",
                    "--package=cris-cli"
                ],
                "filter": {
                    "name": "cris-cli",
                    "kind": "bin"
                }
            },
            "args": ["hola", "mundo"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'cris-cli'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=cris-cli",
                    "--package=cris-cli"
                ],
                "filter": {
                    "name": "cris-cli",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}